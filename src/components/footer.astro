---
const NAVIGATION = [
  {
    label: "Interviews",
    href: "/",
  },
  {
    label: "About",
    href: "/about",
  },
  {
    label: "Roasters",
    href: "/roasters",
  },
  {
    label: "Subscribe",
    href: "/subscribe",
  },
] as const;
const SOCIAL = [
  {
    label: "Instagram",
    href: "https://www.instagram.com/ibmoconline",
  },
  {
    label: "Bluesky",
    href: "https://bsky.app/profile/ibrewmyown.coffee",
  },
  {
    label: "Twitter",
    href: "https://twitter.com/ibmoconline",
  },
];
---

<footer class="pt-8 px-8 bg-primary text-primary rounded-t-lg">
  <div class="grid grid-cols-2 md:grid-cols-4 gap-x-4 items-start">
    <div>
      <h2 class="mb-4 text-xs uppercase font-mono text-accent">
        Navigate&nbsp;&not;
      </h2>
      <ul class="space-y-2">
        {
          NAVIGATION.map((item) => {
            return (
              <li>
                <a
                  href={item.href}
                  class="tracking-tight text-white not-hover:opacity-80 font-medium"
                >
                  {item.label}
                </a>
              </li>
            );
          })
        }
        <li>
          <a
            href="https://forms.gle/gRxKXzVL3SBjkNXD8"
            class="tracking-tight text-white not-hover:opacity-80"
            target="_blank"
            rel="noopener">Submit a setup</a
          >
        </li>
      </ul>
    </div>

    <div>
      <h2 class="mb-4 text-xs uppercase font-mono text-accent">
        Connect&nbsp;&not;
      </h2>
      <ul class="space-y-2">
        {
          SOCIAL.map((item) => {
            return (
              <li>
                <a
                  href={item.href}
                  class="tracking-tight text-white not-hover:opacity-80"
                >
                  {item.label}
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>

