---
import { getIndexById, getSlugFromId, isProd } from "@/utils";
import {
  META,
  // STATS
} from "@/consts";
import Layout from "../layouts/Layout.astro";
import {
  getCollection,
  // render
} from "astro:content";
import { Image } from "astro:assets";
// const brands = await getCollection("brands");
const collection = await getCollection("interviews", ({ data }) => {
  return isProd ? data.draft !== true : true;
});
const interviews = collection.sort((a, b) => {
  const aDate = a.data.published;
  const bDate = b.data.published;
  return Date.parse(bDate.toString()) - Date.parse(aDate.toString());
});
---

<Layout>
  <header class="mt-8 relative overflow-hidden">
    <h1 class:list={["font-bold text-3xl sm:text-4xl tracking-tight"]}>
      {META.title}
    </h1>
    <p
      class:list={[
        "relative mt-1 text-xl sm:text-2xl font-medium text-neutral-600",
        // "bg-gradient-to-br from-neutral-600 from-25% to-neutral-950 to-75% bg-clip-text text-transparent",
      ]}
    >
      <!-- A collection of {
        new Intl.NumberFormat().format(interviews.length + 1000)
      }+ personal coffee brewing stations. -->
      {META.description}
    </p>
  </header>

  <section class="mt-12">
    <!-- <p class="font-mono text-neutral-600 text-sm">Join 14,000+ other readers</p> -->
    <h2 class="font-mono text-neutral-600 text-sm">
      Join the weekly newsletter
    </h2>
